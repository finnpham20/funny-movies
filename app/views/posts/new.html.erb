<div class="container">
	<div class="card card-share">
		<div class="card-body">
			<h5 class="card-title">Share a Youtube movie</h5>
			<div>
				<%= form_for(@post, url: posts_path) do |f| %>
					<div class="field">
						<%= f.label :youtube_url %><br>
						<%= f.text_field :youtube_url, required: true, class: "form-control oneline" %>
					</div>

					<div class="mt-1 float-right">
						<%= f.submit 'Share', class: "btn btn-sm btn-success" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
